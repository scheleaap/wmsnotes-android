<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewer_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="info.maaskant.wmsnotes.android.ui.detail.DetailActivity"
    tools:showIn="@layout/detail_activity">

    <!-- The LinearLayout is necessary to apply padding to, so that size calculations in the TextView (e.g. for images) work correctly -->
    <!-- See https://stackoverflow.com/a/45306799 for why to use padding instead of margin. -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/viewer_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="@android:color/primary_text_light"
            android:textSize="18sp" />
    </LinearLayout>

</ScrollView>
