<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.maaskant.wmsnotes">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="info.maaskant.wmsnotes.WmsNotesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="info.maaskant.wmsnotes.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="info.maaskant.wmsnotes.detail.DetailActivity"
            android:label="@string/title_activity_detail"
            android:parentActivityName="info.maaskant.wmsnotes.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="info.maaskant.wmsnotes.MainActivity" />
        </activity>

        <activity
            android:name="info.maaskant.wmsnotes.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="info.maaskant.wmsnotes.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="info.maaskant.wmsnotes.MainActivity" />
        </activity>

    </application>

</manifest>
